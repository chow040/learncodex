# Core service settings
AUTOTRADE_SERVICE_NAME=autotrade-service
AUTOTRADE_REDIS_URL=redis://localhost:6379/0
AUTOTRADE_DUAL_SCHEDULER_ENABLED=true
AUTOTRADE_DECISION_INTERVAL_MINUTES=5
AUTOTRADE_TRADING_BROKER=simulated  # Options: simulated, okx_demo

# Market data configuration (JSON arrays)
AUTOTRADE_MARKET_DATA_SYMBOLS=["BTC-USDT-SWAP","ETH-USDT-SWAP","SOL-USDT-SWAP","BNB-USDT-SWAP","DOGE-USDT-SWAP","XRP-USDT-SWAP"]
AUTOTRADE_LLM_TRADING_SYMBOLS=["BTC-USDT-SWAP","ETH-USDT-SWAP"]  # Optional subset evaluated by the LLM

# CCXT exchange credentials (example: OKX demo keys)
AUTOTRADE_CCXT_EXCHANGE_ID=okx
AUTOTRADE_CCXT_API_KEY=your-ccxt-api-key
AUTOTRADE_CCXT_SECRET=your-ccxt-secret
AUTOTRADE_CCXT_PASSWORD=your-ccxt-passphrase

# OKX API configuration
AUTOTRADE_OKX_BASE_URL=https://my.okx.com
AUTOTRADE_OKX_DEMO_MODE=true
AUTOTRADE_OKX_API_KEY=your-okx-demo-api-key
AUTOTRADE_OKX_SECRET_KEY=your-okx-demo-secret
AUTOTRADE_OKX_PASSPHRASE=your-okx-passphrase

# OKX trading credentials (used by OKX client/broker)
AUTOTRADE_OKX_API_KEY=your-okx-demo-api-key
AUTOTRADE_OKX_SECRET_KEY=your-okx-demo-secret
AUTOTRADE_OKX_PASSPHRASE=your-okx-demo-passphrase
AUTOTRADE_OKX_DEMO_MODE=true

# Auto-portfolio persistence (required for paper/live DB writes)
# AUTOTRADE_AUTO_PORTFOLIO_USER_ID=00000000-0000-0000-0000-000000000000

# Logging configuration
# AUTOTRADE_LOG_DIR=logs

# DeepSeek LLM configuration
AUTOTRADE_DEEPSEEK_API_KEY=your-deepseek-key
AUTOTRADE_DEEPSEEK_MODEL=deepseek-chat

# Optional database connection
# AUTOTRADE_DB_URL=postgresql://user:password@localhost:5432/autotrade

# Logging / traces
AUTOTRADE_DECISION_TRACE_LOG_PATH=logs/decision-traces.log
