{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/market-data",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/llm-decision",
      "schedule": "*/30 * * * *"
    }
  ],
  "env": {
    "LOG_LEVEL": "INFO"
  }
}
