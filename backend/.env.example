# Server configuration
PORT=4000
NODE_ENV=development

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
# Optional: Override the default OpenAI base URL (e.g., for proxies)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Grok (x.ai) configuration
# Optional: To use Grok models from x.ai
GROK_API_KEY=your_grok_api_key_here
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-beta
# Note: Region-specific models are supported, e.g., grok-4-fast-reasoning-us-east-1
# Optional: Comma-separated list of allowed Grok models
# GROK_ALLOWED_MODELS=grok-beta,grok-2-1212,grok-2-vision-1212,grok-4-fast,grok-4-fast-reasoning

# Google Gemini configuration
# Optional: To use Gemini models via @google/generative-ai
GOOGLE_GENAI_API_KEY=yAIzaSyAqARR4y8pCTy39jfsoRHtNDya1njBGwZc
GOOGLE_GENAI_MODEL=gemini-2.5-pro
# Optional: Comma-separated list of allowed Gemini models
# GOOGLE_GENAI_ALLOWED_MODELS=gemini-1.5-flash,gemini-2.0-flash,gemini-2.0-flash-thinking

# Trading model configuration
# Optional: Override the default model for Trading Agents workflows
# Priority: TRADING_DEFAULT_MODEL → OPENAI_MODEL → GROK_MODEL → GOOGLE_GENAI_MODEL
# TRADING_DEFAULT_MODEL=gpt-4o-mini
# Optional: Comma-separated list of allowed models (merges OpenAI + Grok defaults if not set)
# TRADING_ALLOWED_MODELS=gpt-4o-mini,gpt-4o,grok-beta,gemini-1.5-flash

# Chart Analysis configuration
# Temperature for AI model (0.0 = deterministic, 2.0 = creative)
# Recommended: 0.1-0.3 for consistent technical analysis
# CHART_ANALYSIS_TEMPERATURE=0.1

# Finnhub configuration
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# Alpha Vantage configuration (optional)
# ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# Reddit configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=EquityInsightApp/1.0 (+https://example.com/contact)

# Database configuration
# Example: postgres://user:password@localhost:5432/equity_insight
# DATABASE_URL=postgres://user:password@localhost:5432/equity_insight

# OpenAI embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Trading Agents debate rounds
INVEST_DEBATE_ROUNDS=1
RISK_DEBATE_ROUNDS=1

# Chart debate rounds (separate from Trading Agents)
CHART_DEBATE_A_ROUNDS=1
CHART_DEBATE_B_ROUNDS=1

# Logging directories (optional)
# TA_LOG_DIR=/path/to/ta/logs
# CHART_DEBATE_LOG_DIR=/path/to/chart/debate/logs

# LangGraph limits
MAX_TOOL_STEPS=5
MAX_RECURSION_LIMIT=100

# Memory and past results configuration
# USE_DB_MEMORIES defaults to true if DATABASE_URL is set
# USE_DB_MEMORIES=true
USE_PAST_RESULTS_IN_ASSESSMENTS=false
PAST_RESULTS_WINDOW_DAYS=90
PAST_RESULTS_MAX_ENTRIES=5

# Trading assessment history
TRADING_ASSESSMENT_HISTORY_ENABLED=false

# Trading Agents mock mode (for testing)
TRADING_AGENTS_USE_MOCK=false
# TRADING_AGENTS_MOCK_FIXTURE=fixtures/tradingAgentsDecision.mock.json
TRADING_AGENTS_MOCK_DURATION_MS=20000
